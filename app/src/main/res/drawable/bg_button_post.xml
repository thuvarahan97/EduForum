<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners
                android:radius="5dp" />
            <stroke
                android:color="@color/cardview_light_background"
                android:width="2dp"
                />
            <!--<padding
                android:bottom="12dp"
                android:top="12dp"
                android:left="12dp"
                android:right="12dp"
                />-->
            <solid android:color="@color/lighter_gray"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="5dp" />
            <stroke
                android:color="@color/purple_3"
                android:width="2dp"
                />
            <padding
                android:bottom="12dp"
                android:top="12dp"
                android:left="12dp"
                android:right="12dp"
                />
            <solid android:color="@color/purple_1"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="5dp" />
            <stroke
                android:color="@color/purple_3"
                android:width="2dp"
                />
            <padding
                android:bottom="12dp"
                android:top="12dp"
                android:left="12dp"
                android:right="12dp"
                />
            <solid android:color="@color/purple_1"/>
        </shape>
    </item>
</selector>